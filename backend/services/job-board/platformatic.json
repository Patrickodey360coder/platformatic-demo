{
  "$schema": "https://platformatic.dev/schemas/v1.52.0/db",
  "db": {
    "connectionString": "{PLT_JOB_BOARD_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "server": {
    "hostname": "127.0.0.1",
    "port": "3042"
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_JOB_BOARD_APPLY_MIGRATIONS}"
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes"
      }
    ],
    "typescript": "{PLT_JOB_BOARD_TYPESCRIPT}"
  },
  "types": {
    "autogenerate": true
  }
}